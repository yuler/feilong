a:hover
  cursor pointer

header
  width 100%
  height 24px
  background #1e1b29
  a
    color white
    line-height 24px
    margin-left 15px
    &:hover
      color white

main
  width 100%
  height 80px + 613px
  background url('/statics/login-bg.png')
  background-position center
  background-size cover

#logo
  height 80px
  background rgba(255, 255, 255, .9)
  img
    padding 22px 0

.signin__signup
  // width 410px + 30px
  margin-top 400px

.signin
.signup
  margin-bottom 20px

.signup
.signup:hover
  color white
  background-color transparent

footer
  width 100%
  height 100px
  text-align center
  color #909191

  .links
    margin-top 10px

    a
      margin 0 10px

#login-modal
  color white
  h4
    margin-bottom 20px
    text-align center
  .modal-dialog
    margin 0
    width 280px
    height 280px
    position absolute
    top 40%
    left 50%
    transform translate(-50%, -50%)
  .modal-content
    background rgba(0, 0, 0, .5)

  .modal-body
    padding 0 40px
  .input-group
    margin-bottom 10px
  button.close
    color white
    float left
    margin-left 15px
    margin-top 10px
    text-shadow none
    opacity 1
  button.login
    margin-top 10px

  .forget-link a
  .forget-link a:hover
    color white

  .register-link
    margin-top 10px

.modal-backdrop
  background-color transparent
